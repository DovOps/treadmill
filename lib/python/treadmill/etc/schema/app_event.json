{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "resource_id": {
        "type": "string",
        "maxLength": 60,
        "pattern": "^[a-zA-Z0-9_]+(\\.[a-zA-Z0-9\\-_^#]+)+$"
    },
    "resource": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "cells": {
                "type": "array",
                "items": { "$ref": "common.json#/cell" },
                "minItems": 1
            },
            "pattern": {
                "type": "string"
            },
            "pending": {
                "type": "integer"
            },
            "exit": {
                "enum": ["non-zero", "aborted"]
            }
        }
    },
    "verbs": {
        "create": {
            "required": ["exit", "pattern"]
        },
        "update": {
            "required": []
        }
    }
}
